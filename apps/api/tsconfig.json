{
  "compilerOptions": {
    /* Node / Express kompatible Einstellungen */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,

    /* Typdefinitionen */
    "types": ["node"],

    /* NÃ¼tzliche Optionen */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
